{
    "version": "2.0.0",
    "command": "",
    "args": [],
    "tasks": [
        {
            "label": "mkdir",
            "type": "shell",
            "command": "cmd",
            "args": [
                "/C",
                "if not exist .\\build mkdir .\\build"
            ]
        },
        {
            "label": "build",
            "type": "shell",
            "command": "odin build . -debug -out:build/debug.exe",
            "group": "build"
        },
        {
            "label": "build-test",
            "type": "shell",
            "command": "odin build . -build-mode:test -debug -out:build/debug.exe -define:ODIN_TEST_THREADS=1",
            "group": "build"
        },
        {
            "label": "build-replay",
            "type": "shell",
            "command": "odin build . -debug -out:build/debug.exe -define:REPLAY=true",
            "group": "build"
        },
        {
            "label": "Build",
            "dependsOn": [
                "mkdir",
                "build"
            ]
        },
        {
            "label": "Build-Test",
            "dependsOn": [
                "mkdir",
                "build-test"
            ]
        },
        {
            "label": "Build-Replay",
            "dependsOn": [
                "mkdir",
                "build-replay"
            ]
        },
    ]
}